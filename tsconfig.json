{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "removeComments": true,
    "target": "es2017",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["koa-body"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "scripts", "dist", "app"]
}
